---
title: "Tags"

excerpt: "タグ一覧"
---
<section>
  <h1><%= @item[:title] %></h1>
  <% if all_tags = tags %>
    <ul>
      <% all_tags.tags.sort_by {|tag| all_tags.item(tag)[:title]}.each do |tag; item| %>
        <li>
          <% item = all_tags.item(tag) %>
          <%= link_to(item[:title], item) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>
